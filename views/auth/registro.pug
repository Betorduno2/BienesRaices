extends ../layout/index

block contenido
  div.py-10
    h1.text-4xl.font-extrabold.text-center.mb-3 Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

    div.mt-8.mx-auto.max-w-md
      div.bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST" action="/auth/registro")
          div
            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="nombre") Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.border-radius.placeholder-gray-200(placeholder="Nombre" type="text" name="nombre")
            
          div
            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="email") Email
            input#email.w-full.px-3.py-2.border.border-gray-300.border-radius.placeholder-gray-200(placeholder="email" type="email" name="email")
          
          div
            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-300.border-radius.placeholder-gray-200(placeholder="Password" type="password" name="password")
          
          div
            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="rpassword") Repitir Password
            input#rpassword.w-full.px-3.py-2.border.border-gray-300.border-radius.placeholder-gray-200(placeholder="Repetir Password" type="password" name="rpassword")
          
          div.flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
            a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password

          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3" type="submit", value="Crear Cuenta")